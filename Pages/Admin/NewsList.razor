<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Thông báo</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
                @if (!content)
                {
                    <div class="modal-body">
                        Bạn có muốn xoá?
                    </div>
                }
                else
                {
                    <div class="modal-body">
                        Xoá thành công
                    </div>
                }
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                
                @if (!content)
                {
                    <button type="button" class="btn btn-primary" @onclick="DeleteNews">Delete</button>
                }
            </div>
        </div>
    </div>
</div>



@code {
    public List<NewsDb> news = new List<NewsDb>();
    protected int id;
    protected bool content = false;
    protected async override void OnInitialized()
    {
        try
        {
            news = (await newsService.GetAll()).ToList();
            StateHasChanged();
            await JS.InvokeVoidAsync("DataTable");
        }
        catch
        {

        }
    }
    private async Task DeleteNews()
    {
        try
        {
            var path = Path.Combine(Environment.ContentRootPath, "wwwroot", "BanTin", id.ToString() + ".jpg");
            if (File.Exists(path))
            {
                File.Delete(path);
            }
            var pathContent = Path.Combine(Environment.ContentRootPath, "wwwroot", "NewsContent", id.ToString());
            if (Directory.Exists(pathContent))
            {
                Directory.Delete(pathContent, true);
            }
            var result = await newsService.Delete(id);
            news = (await newsService.GetAll()).ToList();
            if (result > 0)
            {
                content = true;
            }
            StateHasChanged();
        }
        catch (Exception e)
        {
            
            throw;
        }
    }

    private async Task ChangeId(int Id)
    {
        content = false;
        id = Id;
        StateHasChanged();
    }
    private async void WinLoad(string url)
    {
        await JS.InvokeVoidAsync("WinLoad", url);
    }
}
