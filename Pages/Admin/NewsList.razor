@page "/Admin/NewsList"
@using CharityClinic.Data.Model;
@using CharityClinic.Services;
@using CharityClinic.Shared;
@layout AdminLayout
@inject IBaseService<NewsDb> newsService;
@inject IJSRuntime JS
@inject IHostEnvironment Environment

<h3>NewsList</h3>

<a class="btn" href="javascript:void(0)" @onclick=@(e => WinLoad("/admin/ban-tin/"))>Create</a>
<table id="myTable" class="display">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Image</th>
            <th>TimeCreate</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach(var item in news)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Tiltle</td>
            <td><img src="@item.PathImg" alt="image" style="height: 80px;" /></td>
            <td>@item.TimeCreate</td>
            <td>
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal" @onclick=@(e => ChangeId(item.Id))>
                    <i class="fa fa-trash"></i>
                </button>
                <a class="btn" href="javascript:void(0)" @onclick=@(e => WinLoad("/admin/ban-tin/" + item.Id))><i class="fa fa-pencil-square"></i></a>
            </td>
        </tr>
    }
    </tbody>
</table>
